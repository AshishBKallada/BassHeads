                <div class="card-body">
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                        <% banners.forEach((banner)=>{ %>
                        <div class="col" style="width: 900px;">
                            <div class="card card-product-grid" style="height:400px" >
                                <a href="#" class="img-wrap"> <img style="width:900px" src="/banners/<%= banner.image %>"> </a>
                                <div class="info-wrap">
                                    <a href="#" class="title text-truncate"><%= banner.title %></a>
                                    <div class="price mb-2"><%= banner.desc %></div>
                                    <p> TARGET URL : <%= banner.targetUrl %></p>
                                    <p style="color: red;">Active from: <%= banner.startDate.toLocaleString() %> to <%= banner.endDate.toLocaleString() %></p>
                                    <a href="/admin/editbanner/?bannerId=<%= banner._id%>  " class="btn btn-sm font-sm rounded btn-brand">
                                        <i class="material-icons md-edit"></i> Edit
                                    </a>
                                    <a class="btn btn-sm font-sm btn-light rounded" onclick="removeBanner('<%= banner._id %>')">
                                        <i class="material-icons md-delete_forever"></i> Delete
                                    </a>
                                    <a onclick="changeStatus('<%= banner._id %>')" class="btn btn-sm font-sm rounded <%= banner.status===true ? 'btn-primary' : 'btn-danger' %>">
                                        <i class="material-icons md-edit"></i> <%= banner.status ? 'Active' : 'Inactive' %>
                                    </a>
                                </div>
                            </div> <!-- card-product  end// -->
                        </div> <!-- col.// -->
                         <% }) %>
