<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Access the data attribute
        const monthlyRevenueDataElement = document.getElementById('monthlyRevenueData');
        const monthlyRevenueData = JSON.parse(monthlyRevenueDataElement.getAttribute('data-monthly-revenue'));

        // Create an array of months with zero values for missing months
        const allMonths = Array.from({ length: 12 }, (_, i) => i + 1);
        const filledData = allMonths.map(month => {
            const dataEntry = monthlyRevenueData.find(entry => entry.month === month);
            return dataEntry || { month, year: new Date().getFullYear(), totalRevenue: 0 };
        });

        // Continue with your chart rendering logic
        const labels = filledData.map(entry => `${getMonthName(entry.month)} ${entry.year}`);
        const data = filledData.map(entry => entry.totalRevenue);

        // Creating the line chart
        const ctx = document.getElementById('monthlyRevenueChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Monthly Revenue',
                    data: data,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 2,
                    fill: false,
                }]
            },
            options: {
                scales: {
                    x: {
                        type: 'category',
                        labels: labels,
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });

    // Helper function to get month name
    function getMonthName(monthNumber) {
        const months = [
            'January', 'February', 'March', 'April', 'May', 'June',
            'July', 'August', 'September', 'October', 'November', 'December'
        ];
        return months[monthNumber - 1];
    }
</script>

