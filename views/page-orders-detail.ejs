        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order detail</h2>
                    <p>Details for Order ID: <%= orderData.Id %></p>
                </div>
            </div>
            <div class="card">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i> <b><%= orderData.createdAt.toLocaleString() %></b>
                            </span> <br>
                            <small class="text-muted">Order ID: <%= orderData.Id %></small>
                        </div>
                        <div class="col-lg-6 col-md-6 ms-auto text-md-end">

                            <select class="form-select d-inline-block mb-lg-0 mb-15 mw-200" id="orderStatusSelect" >
                                <% if (orderData.status === 'Pending') { %>
                                    <option value="Confirmed">Confirmed</option>
                                    <option value="Pending" selected>Pending</option>
                                    <option value="Cancelled">Cancelled</option>
                                <% } else if (orderData.status === 'Confirmed') { %>
                                    <option value="Shipped">Shipped</option>
                                    <option value="Confirmed" selected>Confirmed</option>
                                    <option value="Cancelled">Cancelled</option>
                                <% } else if (orderData.status === 'Shipped') { %>
                                    <option value="Out For Delivery">Out For Delivery</option>
                                    <option value="Shipped" selected>Shipped</option>
                                <% } else{ %>
                                    <option value="Out For Delivery">Out For Delivery</option>
                                    <option value="Delivered" selected>Delivered</option>
                                    <option value="Cancelled" selected>Cancelled</option>
                                    <% } %>
                            </select>
                            <a class="btn btn-primary" href="#" onclick="changestatus('<%= orderData._id%>')">Save</a>
                            <a class="btn btn-secondary print ms-2" href="#"><i class="icon material-icons md-print"></i></a>

                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="row mb-50 mt-20 order-info-wrap">
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1"><%= %></h6>
                                    <p class="mb-1">
                                        Username:<%= userData[0].username%><br>E-mail:<%= userData[0].email%> <br>Ph No:<%= orderData.address.contacts[0].phno %>  
                                    </p>
                                    <a href="#">View profile</a>
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Order info</h6>
                                    <p class="mb-1">
                                        Shipping: Fargo express <br> Pay method:<%= orderData.paymentMethod === 'cod'? 'Cash On Delivery':'RazorPay'%><br> Status: <%= orderData.status%>
                                    </p>
                                    <a href="#">Download info</a>
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver to</h6>
                                    <p class="mb-1">
                                        Country:<%= orderData.address.addresses[0].country %> <br> State:<%= orderData.address.addresses[0].state %>  <br>
                                        District:<%= orderData.address.addresses[0].district %>  <br>  City: <%= orderData.address.addresses[0].city %> <br>Landmark:<%= orderData.address.addresses[0].landmark %> <br>Pincode: <%= orderData.address.addresses[0].pincode %>
                                    </p>
                                    <a href="#">View profile</a>
                                </div>
                            </article>
                        </div> <!-- col// -->
                    </div> <!-- row // -->
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="40%">Product</th>
                                            <th width="20%">Unit Price</th>
                                            <th width="20%">Quantity</th>
                                            <th width="20%" class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% productData.forEach((product,index)=>{ %>
                                        <tr>
                                            <td>
                                                <a class="itemside" href="#">
                                                    <div class="left">
                                                        <img src="/uploads/<%= product.coverimage.filename %>" width="40" height="40" class="img-xs" alt="Item">
                                                    </div>
                                                    <div class="info"> <%= product.name%> </div>
                                                </a>
                                            </td>
                                            <td> <%= product.price%>  </td>
                                            <td> <%= orderData.products[index].quantity %> </td>
                                            <td class="text-end"> <%= (product.price*orderData.products[index].quantity)%></td>
                                        </tr>
                                    <% }) %>
                                            <td colspan="4">
                                                <article class="float-end">
                                                    <dl class="dlist">
                                                        <dt>Subtotal:</dt>
                                                        <dd><%= orderData.grandTotal %></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Shipping cost:</dt>
                                                        <dd>100</dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Grand total:</dt>
                                                        <dd> <b class="h5"><%= orderData.grandTotal +100 %></b> </dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt class="text-muted">Status:</dt>
                                                        <dd>
                                                            <span class="badge rounded-pill
                                                                <% if (orderData.payment_status === false) { %>
                                                                alert-danger text-danger
                                                                <% } else { %>
                                                                alert-success text-success
                                                                <% } %>
                                                            ">
                                                               <% if (orderData.payment_status === true) { %>
                                                                  Payment Done
                                                                <% } else { %>
                                                                  Payment pending
                                                                <% } %>
                                                              </span>                                                        </dd>
                                                    </dl>
                                                </article>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div> <!-- table-responsive// -->
                            <a class="btn btn-primary" href="page-orders-tracking.html">View Order Tracking</a>
                        </div> <!-- col// -->
                        <div class="col-lg-1"></div>
                        <div class="col-lg-4">
                            <div class="box shadow-sm bg-light">
                                <h6 class="mb-15">Payment info</h6>
                                <p>
                                    <img src="/adminassets/imgs/card-brands/2.png" class="border" height="20"> Master Card **** **** 4768 <br>
                                    Business name: Grand Market LLC <br>
                                    Phone: +1 (800) 555-154-52
                                </p>
                            </div>
                            <!-- <% if (orderData.cancelRequest === true) { %>
                                <div class="h-25 pt-4">
                                    <div class="mb-3">
                                        <label style="color: red;">The customer has sent a cancel request</label>
                                        <div class="form-control" name="notes" id="notes">
                                            <%= orderData.reason %>
                                        </div>
                                    </div>
                                    <button class="btn btn-success" onclick="requestStatus('Accept', '<%= orderData._id %>')">Accept</button>
                                    <button class="btn btn-danger" onclick="requestStatus('Reject', '<%= orderData._id %>')">Reject</button>
                                </div> 
                            <% } %> -->
                            
                            
                    </div>
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> ©, Evara - HTML Ecommerce Template .
                </div>
