                                  </div>
                                  <!-- Add more address type options as needed -->
                                </div>
                              </div>
                            
                              <!-- Country-->
                              <div class="col-md-6">
                                <div class="form-group">
                                  <label for="country" class="form-label">Country</label>
                                  <select class="form-select" name="country" id="country" required="">
