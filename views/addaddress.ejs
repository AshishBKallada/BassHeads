                              <!--Name-->
                              <div class="col-sm-6">
                                <div class="form-group">
                                  <label for="firstName" class="form-label">Name</label>
                                  <input type="text" name="name" class="form-control" id="firstName" placeholder="" value="" required="">
                                </div>
                              </div>

                              <!-- Address-->
                              <div class="col-6">
        
                                <div class="form-group">
                                  <label class="form-label">Address Type</label>
